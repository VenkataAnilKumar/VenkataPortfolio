# Environment Configuration
ENV=prod
DB_URL=postgresql+asyncpg://user:pass@localhost:5432/disputes
REDIS_URL=redis://localhost:6379

# LLM Settings
LLM_PROVIDER=openai
OPENAI_API_KEY=your-api-key
ANTHROPIC_API_KEY=your-anthropic-key
TOKEN_BUDGET_PER_CASE=8000
MAX_CONCURRENT_LLM_CALLS=10
LLM_TIMEOUT_SECONDS=30

# Security Settings
API_KEY=your-api-key
JWT_SECRET=your-jwt-secret
CORS_ORIGINS=https://app.example.com,https://admin.example.com
ENABLE_PII_REDACTION=1
PII_CONFIDENCE_THRESHOLD=0.7
MAX_NARRATIVE_LENGTH=10000
RATE_LIMIT_PER_MINUTE=100

# Analytics Settings
ENABLE_PATTERN_DETECTION=1
PATTERN_DETECTION_WINDOW_DAYS=30
RISK_SCORE_THRESHOLD=0.8

# Cache Settings
CACHE_TTL_SECONDS=3600

# Telemetry Settings
ENABLE_PROMETHEUS=1
METRICS_PORT=9090
ENABLE_AUDIT_LOGGING=1

# Feature Flags
ENABLE_ADVANCED_ENRICHMENT=1
ENABLE_REAL_TIME_ALERTS=1
ENABLE_AUTO_RESOLUTION=0